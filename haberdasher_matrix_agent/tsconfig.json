{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "keyofStringsOnly": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "dom", "dom.iterable", "es6", "es2017", "scripthost"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
